@model Kermesse.Models.ArqueoCaja

@{
    ViewBag.Title = "Creando nuevo arqueo caja";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creando nuevo arqueo caja</h1>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.kermesse, "kermesse", htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
        <div class="col-md-10">
            @Html.DropDownList("kermesse", null, htmlAttributes: new { @class = "form-control mb-2" })
            @Html.ValidationMessageFor(model => model.kermesse, "", new { @class = "text-danger mb-2" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.fechaArqueo, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.fechaArqueo, new { htmlAttributes = new { @class = "form-control mb-2" } })
            @Html.ValidationMessageFor(model => model.fechaArqueo, "", new { @class = "text-danger mb-2" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.granTotal, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.granTotal, new { htmlAttributes = new { @class = "form-control mb-2" } })
            @Html.ValidationMessageFor(model => model.granTotal, "", new { @class = "text-danger mb-2" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-12 col-md-6 col-lg-3 col-xl-2">
            <input type="submit" value="Create" class="btn btn-success w-100" />
        </div>
        <div class="col-12 col-md-6 col-lg-3 col-xl-2">
            <a href="Index" class="btn btn-primary w-100">Regresar</a>
        </div>
    </div>
</div>
}

