@model Kermesse.Models.CategoriaGasto

@{
    ViewBag.Title = "Editar Categoría de Gasto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Categoria de gastos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-2" })
        @Html.HiddenFor(model => model.idCatGasto)

        <div class="form-group">
            @Html.LabelFor(model => model.nombreCategoria, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombreCategoria, new { htmlAttributes = new { @class = "form-control mb-2", maxLength = "45" } })
                @Html.ValidationMessageFor(model => model.nombreCategoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control mb-2", maxLength = "100" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.estado, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control mb-2", type = "number", min = "0", max = "1", @oninput = "onlyZeroOne(event)" } })
                @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-secondary"><i class="fa fa-pencil icon" style="margin-right: .5rem;"></i> Guardar</button>
            </div>
        </div>
    </div>
}

<div>
    <div style="margin-bottom: 1rem">
        <button type="button" class="btn btn-primary">
            @Html.ActionLink("Regresar", "Index", null, new { @style = "color: White;" })
        </button>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
