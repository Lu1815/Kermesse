@model Kermesse.Models.CategoriaProducto

@{
    ViewBag.Title = "Eliminando categoría de producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminando categoría de producto</h1>

<h3>¿Estás seguro que quieres eliminar esto?</h3>
<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-12 col-md-6 col-lg-3 col-xl-2">
            <input type="submit" value="Eliminar" class="btn btn-danger w-100" />
        </div>
        <div class="col-12 col-md-6 col-lg-3 col-xl-2">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary w-100" })
        </div>
    }
</div>
