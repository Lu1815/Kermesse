@model Kermesse.Models.Comunidad

@{
    ViewBag.Title = "Creando nueva comunidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creando nueva comunidad</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">

        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control mb-2" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger mb-2" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.responsble, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.responsble, new { htmlAttributes = new { @class = "form-control mb-2" } })
            @Html.ValidationMessageFor(model => model.responsble, "", new { @class = "text-danger mb-2" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.descContribucion, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.descContribucion, new { htmlAttributes = new { @class = "form-control mb-2" } })
            @Html.ValidationMessageFor(model => model.descContribucion, "", new { @class = "text-danger mb-2" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-12 col-md-6 col-lg-3 col-xl-2">
            <input type="submit" value="Crear" class="btn btn-success w-100" />
        </div>
        <div class="col-12 col-md-6 col-lg-3 col-xl-2">
            <a href="Index" class="btn btn-primary w-100">Regresar</a>
        </div>
    </div>
</div>
}



