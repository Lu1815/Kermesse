@model Kermesse.Models.Gasto

@{
    ViewBag.Title = "Editando gasto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editando gasto</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idGasto)

        <div class="form-group">
            @Html.LabelFor(model => model.kermesse, "kermesse", htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.DropDownList("kermesse", null, htmlAttributes: new { @class = "form-control mb-2" })
                @Html.ValidationMessageFor(model => model.kermesse, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.catGasto, "catGasto", htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.DropDownList("catGasto", null, htmlAttributes: new { @class = "form-control mb-2" })
                @Html.ValidationMessageFor(model => model.catGasto, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.fechGasto, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.fechGasto, new { htmlAttributes = new { @class = "form-control mb-2", type="datetime-local" } })
                @Html.ValidationMessageFor(model => model.fechGasto, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.concepto, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.concepto, new { htmlAttributes = new { @class = "form-control mb-2" } })
                @Html.ValidationMessageFor(model => model.concepto, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.monto, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.monto, new { htmlAttributes = new { @class = "form-control mb-2" } })
                @Html.ValidationMessageFor(model => model.monto, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-12 col-md-6 col-lg-3 col-xl-2">
                <input type="submit" value="Guardar" class="btn btn-success w-100" />
            </div>
            <div class="col-12 col-md-6 col-lg-3 col-xl-2">
                <a href="../Index" class="btn btn-primary w-100">Regresar</a>
            </div>
        </div>
    </div>
}


