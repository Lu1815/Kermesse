@model Kermesse.Models.IngresoComunidad

@{
    ViewBag.Title = "Creando nuevo ingreso de comundidad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creando nuevo ingreso de comunidad</h1>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.kermesse, "kermesse", htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.DropDownList("kermesse", null, htmlAttributes: new { @class = "form-control mb-2" })
                @Html.ValidationMessageFor(model => model.kermesse, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.comunidad, "comunidad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("comunidad", null, htmlAttributes: new { @class = "form-control mb-2" })
                @Html.ValidationMessageFor(model => model.comunidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.producto, "producto", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("producto", null, htmlAttributes: new { @class = "form-control mb-2" })
                @Html.ValidationMessageFor(model => model.producto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cantProducto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cantProducto, new { htmlAttributes = new { @class = "form-control mb-2" } })
                @Html.ValidationMessageFor(model => model.cantProducto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.totalBonos, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.totalBonos, new { htmlAttributes = new { @class = "form-control mb-2" } })
                @Html.ValidationMessageFor(model => model.totalBonos, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-12 col-md-6 col-lg-3 col-xl-2">
                <input type="submit" value="Crear" class="btn btn-success w-100" />
            </div>
            <div class="col-12 col-md-6 col-lg-3 col-xl-2">
                <a href="Index" class="btn btn-primary w-100">Regresar</a>
            </div>
        </div>
    </div>
}