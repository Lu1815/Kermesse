@model Kermesse.Models.Opcion

@{
    ViewBag.Title = "Editando opción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editando opción</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Opcion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger, mb-2" })
        @Html.HiddenFor(model => model.idOpcion)

        <div class="form-group">
            @Html.LabelFor(model => model.opcionDescripcion, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.opcionDescripcion, new { htmlAttributes = new { @class = "form-control mb-2", maxLength = "70" } })
                @Html.ValidationMessageFor(model => model.opcionDescripcion, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.estado, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control mb-2", min = "0", @oninput = "onlyZeroOne(event)" } })
                @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-secondary"><i class="fa fa-pencil icon" style="margin-right: .5rem;"></i> Guardar</button>
            </div>
        </div>
    </div>
}

<div>
    <div class="mb-1">
        <button type="button" class="btn btn-primary">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "text-light" })
        </button>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
