@model Kermesse.Models.Parroquia

@{
    ViewBag.Title = "Creando nueva parroquia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creando nueva Parroquia</h1>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control mb-2", maxLength = "100" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.direccion, htmlAttributes: new { @class = "control-label col-md-2 mb-2 " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control mb-2", maxLength = "100" } })
                @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.telefono, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control mb-2", maxLength = "15" } })
                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.parroco, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.parroco, new { htmlAttributes = new { @class = "form-control mb-2", maxLength = "100" } })
                @Html.ValidationMessageFor(model => model.parroco, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.logo, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.logo, new { htmlAttributes = new { @class = "form-control mb-2", maxLength = "100" } })
                @Html.ValidationMessageFor(model => model.logo, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sitioWeb, htmlAttributes: new { @class = "control-label col-md-2 mb-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sitioWeb, new { htmlAttributes = new { @class = "form-control mb-2", maxLength = "50" } })
                @Html.ValidationMessageFor(model => model.sitioWeb, "", new { @class = "text-danger mb-2" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-12 col-md-6 col-lg-3 col-xl-2">
                <input type="submit" value="Create" class="btn btn-success w-100" />
            </div>
            <div class="col-12 col-md-6 col-lg-3 col-xl-2">
                <a href="Index" class="btn btn-primary w-100">Regresar</a>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
