@model IEnumerable<Kermesse.Models.Parroquia>

@{
    ViewBag.Title = "Parroquia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Parroquia</h2> 

<p>
    <div class="mb-1">
        <button type="button" class="btn btn-primary">
            <i class="fa fa-plus icon" style="margin-right: .5rem;"></i> @Html.ActionLink("Añadir nueva parroquia", "Create", null, new { @class = "text-light" })
        </button>
    </div>

</p>
<div class="card">
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <tr class="bg-info">
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.parroco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.logo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sitioWeb)
                </th>
                <th>
                    Acciones
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.parroco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.logo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sitioWeb)
                    </td>
                    <td>
                        <button class="btn btn-secondary">
                            @Html.ActionLink("Editar", "Edit", new { id = item.idParroquia }, new { @class = "text-light" })
                        </button>
                        |
                        <button class="btn btn-primary">
                            @Html.ActionLink("Ver", "Details", new { id = item.idParroquia }, new { @class = "text-light" })
                        </button>
                        |
                        <button class="btn btn-danger">
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.idParroquia }, new { @class = "text-light" })
                        </button>
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
