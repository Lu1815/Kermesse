@model Kermesse.Models.Producto

@{
    ViewBag.Title = "Creando producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creando producto</h1>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.comunidad, "Comunidad", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("comunidad", null, htmlAttributes: new { @class = "form-control mb-2" })
            @Html.ValidationMessageFor(model => model.comunidad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.catProd, "Categoría", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("catProd", null, htmlAttributes: new { @class = "form-control mb-2" })
            @Html.ValidationMessageFor(model => model.catProd, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control mb-2" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control mb-2" } })
            @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control mb-2" } })
            @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.precioVSugerido, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.precioVSugerido, new { htmlAttributes = new { @class = "form-control mb-2" } })
            @Html.ValidationMessageFor(model => model.precioVSugerido, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-12 col-md-6 col-lg-3 col-xl-2">
            <input type="submit" value="Crear" class="btn btn-success w-100" />
        </div>
        <div class="col-12 col-md-6 col-lg-3 col-xl-2">
            <a href="Index" class="btn btn-primary w-100">Regresar</a>
        </div>
    </div>
</div>
}
