@model Kermesse.Models.Usuario

@{
    ViewBag.Title = "Editando usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editando usuario</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
